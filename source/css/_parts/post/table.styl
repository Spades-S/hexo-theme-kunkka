.post-content > table {
    padding: 0;
    margin: 15px 0;
    tr {
        border-top: 1px solid #cccccc;
        background-color: white;
        margin: 0;
        padding: 0;
        &:nth-child(2n) {background-color: #f8f8f8;}
        th {
            font-weight: bold;
            border: 1px solid #cccccc;
            text-align: left;
            margin: 0;
            padding: 6px 13px;
        }
        td {
            border: 1px solid #cccccc;
            text-align: left;
            margin: 0;
            padding: 6px 13px;
        }
        th, td {
            &:first-child {margin-top: 0;}
            &:last-child {margin-bottom: 0;}
        }
    }
}
