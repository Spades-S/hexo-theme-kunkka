.post-content {
    h1, h2, h3, h4 {
        position: relative;
        padding-left: 20px;
        margin: 1em 0 0.6em 0;
    }
    h2, h3, h4 {
        &:after {
            position: absolute;
            content: "";
            left: 0;
            top: 0;
            bottom: 0;
            width: 5px;
            border-radius: 2px;
            background: #ddd;
            -webkit-box-sizing: border-box;
               -moz-box-sizing: border-box;
                    box-sizing: border-box;
            padding: 0;
            margin: 0;
        }
    }
    li {line-height: 1.8em;}
}

