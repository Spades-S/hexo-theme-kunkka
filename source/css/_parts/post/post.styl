.post-content {
    h1, h2, h3, h4 {
        position: relative;
        padding-left: 20px;
        margin: 1em 0 0.6em 0;
    }
    h2, h3, h4 {
        &:after {
            position: absolute;
            content: "";
            left: 0;
            top: 0;
            bottom: 0;
            width: 5px;
            border-radius: 2px;
            background: #ddd;
            -webkit-box-sizing: border-box;
               -moz-box-sizing: border-box;
                    box-sizing: border-box;
            padding: 0;
            margin: 0;
        }
    }
    li {line-height: 1.8em;}
    img {
        max-width: 100%;
        height: auto;
    }
    ul {
        margin: 0 0 24px 30px;
        li {
            margin-bottom: 5px;
            list-style: square outside none;
            line-height: 24px;
            ul li {list-style: circle outside none;}
        }
    }
}

