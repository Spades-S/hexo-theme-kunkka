pre, .highlight {
    background: $highlight-background;
    margin: 20px 0;
    padding: 15px;
    overflow: auto;
    font-size: 16px;
    color: $highlight-foreground;
    line-height: 1.6;
}

pre, code {font-family: $CodeFont;}

code {
    word-break: break-all;
    background: #eee;
    text-shadow: 0 1px #fff;
    padding: 0 0.3em;
}

pre code {
    background: none;
    text-shadow: none;
    padding: 0;
}

.highlight {
    pre {
        border: none;
        margin: 0;
        padding: 1px;
    }
    table {
        margin: 0;
        width: auto;
        border: none;
        
    }
    td {
        border: none;
        padding: 0;
    }
    figcaption{
        &:before, &:after {
            content: " ";
            display: table;
        }
        &:after { clear: both; }
        font-size: 0.85em;
        color: $highlight-comment;
        line-height: 1em;
        margin-bottom: 1em;
        a {float: right;}
    }
    .gutter pre {
        color: #666;
        text-align: right;
        padding-right: 20px;
    }
    .line {height: 20px;}
}

pre {
    .comment {color: $highlight-comment;}
    .variable, .template-variable, .attribute, .tag, .name, .regexp, .ruby .constant, .xml .tag .title, .xml .pi, .xml .doctype, .html .doctype, .css .id, .css .class, .css .pseudo, .selector-id, .selector-class, .deletion {color: $highlight-red;}
    .number, .preprocessor, .built_in, .literal, .params, .constant, .command, .meta, .link, .type {color: $highlight-orange;}
    .ruby .class .title, .css .rules .attribute {color: $highlight-green;}
    .string, .value, .inheritance, .header, .ruby .symbol, .xml .cdata, .special, .number, .formula, .bullet, .addition {color: $highlight-green;}
    .title, .css .hexcolor {color: $highlight-aqua;}
    .function, .python .decorator, .python .title, .ruby .function .title, .ruby .title .keyword, .perl .sub, .javascript .title, .coffeescript .title, .section {color: $highlight-blue;}
    .keyword, .javascript .function, .selector-tag {color: $highlight-purple;}
}
