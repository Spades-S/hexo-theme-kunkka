#toc {
    line-height: 1em;
    position: fixed;
    right: 5%;
    width: 20%;
    height: 90%;
    top: 90px;
    overflow: hidden;
    for i in (1..6) {
        .toc-level-{i} .toc-text {margin-left: i em;}
    }
    .toc-text {
        white-space: nowrap;
    }
    .toc-link {
        color: #999;
        &:hover {
            color: $color-theme;
            text-decoration: none;
        }
    }
    .toc {
        padding: 0;
        line-height: 1.8em;
        overflow: auto;
        width: 100%;
        height: 100%;
        li {list-style-type: none;}
    }
    .toc-item {
        .toc-child {
            margin-left: 0;
            padding-left: 0;
            if(hexo-config('toc.collapse')) {display: none;}
        }
        &:hover {
            border-left: 1px solid $color-theme;
        }
        &.active {
            border-left: 2px solid $color-theme;
            > .toc-link {
                color: $color-theme;
            }
            .toc-child {if(hexo-config('toc.collapse')) {display: block;}}
        }
    }
}
