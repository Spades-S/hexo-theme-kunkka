.pager {
    padding: 0 !important;
    margin: 20px 0;
    text-align: center;
    list-style: none;
    clear: both;
/*    &:before, &:after {
        display: table;
        content: " ";
        box-sizing: border-box;
    }*/
/*    .previous {
        > a, > span {float: left;}
    }
    .next {
        > a, > span {float: right;}
    }*/
    .previous {float: left;}
    .next {float: right;}
    .previous, .next {
        display: inline;
        a {
            text-transform: uppercase;
            letter-spacing: 1px;
            line-height: 1.7em;
            font-size: 13px;
            font-weight: 800;
            padding: 10px;
            color: #fff;
            border: 2px solid #404040;
            border-radius: 3px;
            background-color: #404040;
            -webkit-transition: all 0.2s ease;
               -moz-transition: all 0.2s ease;
                    transition: all 0.2s ease;
            &:hover, &:focus {
                text-decoration: none;
                color: #404040;
                background-color: #fff;
            }
        }
    }
}
