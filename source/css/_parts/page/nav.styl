#nav {
    padding: 40px 0 30px;
    border-bottom: 1px solid #ededed;
    background-color: #fafafa;
}

#header {
    position: absolute;
    z-index: 90;
    width: 100%;
    height: 55px;
    padding: 10px 0;
    background-color: #fff;
    border-bottom: 1px solid #ededed;
    box-shadow: 0 1px 0 0 hsla(0, 0%, 62%, .2) inset;
    -ms-box-shadow: 0 1px 0 0 hsla(0, 0%, 62%, .2) inset;
    .container {
        height: 30px;
        line-height: 30px;
        /*margin-left: 80px;*/
    }
}

.logo {
    float: left;
    margin-right: 40px;
    display: block;
    width: 102px;
    height: 30px;
    .brand-logo {
        color: #666;
        padding: 1px 5px 3px 5px;
        font-family: $LogoFont;
        font-size: 20px;
        margin-right: 5px;
    }
}

.global-nav {
    display: block;
    float: left;
    .gnul {display: block;}
    .gnli {
        display: inline-block;
        margin-right: 25px;
        zoom: 1;
        &.current .gna {
            color: $color-theme;
        }
    }
    .gna {
        display: block;
        height: 30px;
        outline: 0;
        color: #666;
        text-decoration: none;
        font-size: 14px;
    }
    ul li a span {
        min-width: 14px;
        margin-right: 5px;
    }
}

.dropdown {
    position: relative;
    &.selected .submenu {display: block;}
    > a {
        padding-left: 17px;
        position: relative;
        &:before {
            position: absolute;
            left: 0;
            top: 0;
            /*line-height: 30px;*/
            vertical-align: middle;
        }
    }
}

.dropdown-link {
    display: block;
    .icon {
        padding-left: 10px;
        vertical-align: middle;
        font-size: 15px;
    }
}

.submenu {
    display: none;
    position: absolute;
    top: 35px;
    left: 0;
    padding: 25px;
    width: 35pc;
    border: 1px solid #ccc;
    border-color: rgba(0, 0, 0, .2);
    border-radius: 2px;
    background: #fff;
    box-shadow: 0 2px 10px rgba(0, 0, 0, .1);
    &:before, &:after {
        position: absolute;
        left: 7px;
        z-index: 1;
        width: 0;
        height: 0;
        border-color: transparent;
        border-style: dashed dashed solid;
        border-width: 0 8px 8px;
        content: " ";
    }
    &:before {
        top: -8px;
        border-bottom-color: #ccc;
        border-bottom-color: rgba(0, 0, 0, .2);
    }
    &:after {
        top: -7px;
        border-bottom-color: #fff;
    }
}

.tdleft {
    width: 45px;
    white-space: nowrap;
    padding-right: 20px;
    border-right: 1px solid #eee;
}

.tdright {padding-left: 20px;}

.trline td {padding-bottom: 15px;}

.tab-categories li {
    display: inline-block;
    cursor: pointer;
    margin: 0 10px 10px 0;
    background: #fafafa;
    a {padding: 0 10px;}
}

.tab-categories li a, .tab-tags a {
    display: block;
    color: #333;
    font: 13px/1.65em $NavigationFont;
    line-height: 180%;
    &:hover {
        background-color: $color-theme;
        color: #fff;
        text-decoration: none;
    }
}

.tab-tags a {
    display: inline-block;
    margin: 0 10px 10px 0;
    padding: 2px 10px;
    background: #f5f5f5;
}

.tab-formats {
    li {
        float: left;
        display: block;
        padding-right: 45px;
        width: 36px;
        text-align: center;
        &.tab-part {padding-right: 0;}
        a {
            color: #999;
            &:hover {
                text-decoration: none;
                .icon-home {background-position: 0 -4pc;}
                .icon-twitter {background-position: -62px -4pc;}
                .icon-film {background-position: -122px -4pc;}
                .icon-inbox {background-position: -182px -4pc;}
            }
            &.news:hover {color: #fa7c7c;}
            &.twitter:hover {color: #00acee;}
            &.films:hover {color: #facc7c;}
            &.archive:hover {color: #5bcb57;}
        }
    }
    span {
        display: block;
        width: 36px;
        height: 2pc;
        font-size: 28px;
    }
}

.section-title {
    color: #666;
    font-weight: 400;
    font-size: 20px;
    line-height: 30px;
}

.tab-more {
    margin-top: 25px;
    width: 280px;
    height: 40px;
    border-top: 1px dotted #ccc;
    text-align: center;
    line-height: 40px;
}
