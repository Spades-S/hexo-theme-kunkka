#nav {
    padding: 40px 0 30px;
    border-bottom: 1px solid #ededed;
    background-color: #fafafa;
}

#header {
    position: absolute;
    z-index: 90;
    width: 100%;
    height: 55px;
    padding: 10px 0;
    background-color: #fff;
    border-bottom: 1px solid #ededed;
    box-shadow: 0 1px 0 0 hsla(0, 0%, 62%, .2) inset;
    -ms-box-shadow: 0 1px 0 0 hsla(0, 0%, 62%, .2) inset;
    .container {
        height: 30px;
        line-height: 30px;
        /*margin-left: 80px;*/
        @media screen and (max-width: 769px) {
            position: relative;
            height: auto;
            padding: 10px 0;
            margin-left: 0px;
        }
    }
    @media screen and (max-width: 769px) {
        padding: 0;
        /*position: fixed;
        width: 100%;
        left: 0;
        top: 0;
        background: #fff;*/
    }
}

.logo {
    float: left;
    margin-right: 40px;
    display: block;
    width: 102px;
    height: 30px;
    .brand-logo {
        color: #666;
        padding: 1px 5px 3px 5px;
        font-family: $LogoFont;
        font-size: 20px;
        margin-right: 5px;
    }
    @media screen and (max-width: 769px) {
        float: none;
        margin-left: 15px;
    }
}

.global-nav {
    display: block;
    float: left;
    .gnul {display: block;}
    .gnli {
        display: inline-block;
        margin-right: 25px;
        zoom: 1;
        &.current .gna {
            color: $anchor-color;
            &:hover {color: $anchor-color;}
        }
    }
    .gna {
        display: block;
        height: 30px;
        outline: 0;
        color: #666;
        text-decoration: none;
        font-size: 14px;
        &:hover {color: $anchor-color;}
    }
    ul li a span {
        min-width: 14px;
        margin-right: 5px;
    }
    /* Responsive dropdown menu design */
    @media screen and (max-width: 769px) {
        float: right;
        &:before {
            position: absolute;
            text-align: center;
            width: 50px;
            height: 50px;
            top: 0;
            right: 0;
            display: inline-block;
            font: normal normal normal 20px\/50px FontAwesome;
            text-rendering: auto;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
            content: "\f0c9"; /* fa-bars */
        }
        .gnul {
            display: none;
            &.collapse {
                position: relative;
                display: block;
                border: none;
                background: white;
                box-shadow: rgba(0, 0, 0, 0.2) 0 1px 4px;
                border-radius: 2px;
                width: 130px;
                float: right;
                margin-right: 15px;
            }
            .gna {line-height: 28px;}
            .gnli {
                display: block;
                width: 100%;
                margin-right: 15px;
                margin-left: 15px;
            }
            .dropdown {display: none;}
        }
    }
}
