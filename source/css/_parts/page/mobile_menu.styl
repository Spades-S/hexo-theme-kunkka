.mobile-menu-button {
    display: none;
    @media screen and (max-width: 769px) {
        display: block;
        position: absolute;
        text-align: center;
        width: 50px;
        height: 50px;
        top: 5px;
        right: 0px;
        font-size: 20px;
    }
}

@media screen and (max-width: 769px) {
    body.mobile-menu-open {
        .search-form {display: block;}
        .global-nav, .global-custom-nav {
            display: block;
            padding: 5px 15px 0 15px;
            border-top: 1px solid #eee;
            float: none;
        }
        #header {
            /*height: 100%;*/
            background: rgba(255,255,255,.5);
            .container {padding-bottom: 0;}
        }
        .mobile-menu-button:before {content: '\f00d';}
    }

