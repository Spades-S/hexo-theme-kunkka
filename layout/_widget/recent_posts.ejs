<% if(theme.recent_posts) { %>
    <% if (site.posts.length){ %>
    <div class="widget recent-posts">
        <h3><%= __('recent_posts') %></h3>
        <ul class="list">
            <% site.posts.sort('updated', -1).limit(8).each(function(post){ %>
            <li>
                <p><a href="<%- config.root %><%- post.path %>" class="tooltipped tooltipped-n" aria-label="<%= post.title || __('untitled') %>"><%= post.title || __('untitled') %></a></p>
                <p><%= __('updated') + __(':') %>
                <% var days = moment(new Date()).diff(post.updated,'days'); %>
                <span><%= (days<=30) ? days+__('days_ago') : post.updated.format('YYYY-MM-D h:m a') %></span></p>
            </li>
            <% }) %>
        </ul>
    </div>
    <% } %>
<% } %>
