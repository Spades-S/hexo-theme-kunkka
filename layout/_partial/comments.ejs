<% if(page.comments) { %>
<section id="comments">
    <% if(theme.duoshuo.shortname) { %>
    <!-- Duoshuo start -->
    <div class="ds-thread"
        data-thread-key="<%= page.path %>"
        data-title="<%= page.title %>"
        data-url="<%= page.permalink %>" >
    </div>
    <!-- Duoshuo end -->
    <% } %>

    <% if(theme['disqus_shortname']) { %>
    <!-- disqus start -->
    <div id="disqus_thread" class="disqus-thread"></div>
    <!-- disqus end -->
    <% } %>
</section>
<% } %>
